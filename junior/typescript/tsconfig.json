{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": false
  },
  "include": ["*.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "types": ["node"],
      "lib": ["ES2020", "DOM"]
    }
  }
}
